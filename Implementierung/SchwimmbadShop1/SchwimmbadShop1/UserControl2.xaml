<UserControl x:Class="SchwimmbadShop1.UserControl2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchwimmbadShop1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White" x:Name="register">

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>


        <TextBlock Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center">Neuer Name:</TextBlock>
        <TextBlock  Grid.Column="1" Grid.Row="2"  HorizontalAlignment="Left" VerticalAlignment="Center">Neue Email: </TextBlock>
        <TextBlock Grid.Column="1" Grid.Row="3"  HorizontalAlignment="Left" VerticalAlignment="Center">Passwort :</TextBlock>
        <TextBlock Grid.Column="1" Grid.Row="4"  HorizontalAlignment="Left" VerticalAlignment="Center">Passwort bestätigen :</TextBlock>

        <Button Grid.Column="1" Grid.Row="5" x:Name="saveacc" Margin="15" Content="Accountdaten Speichern" Click="saveac"></Button>

        <TextBox Grid.Column="1" Grid.Row="1" Margin="80,15,10,20" x:Name="newname"></TextBox>
        <TextBox Grid.Column="1" Grid.Row="2" Margin="70,15,10,20" x:Name="newmail"></TextBox>
        <PasswordBox Grid.Row="3" Grid.Column="1" Margin="70,15,10,20" x:Name="pwd"></PasswordBox>
        <PasswordBox Grid.Row="4" Grid.Column="1" Margin="120,15,10,20" x:Name="pwdenter"></PasswordBox>

        <Button Grid.Column="1" Grid.Row="6" Margin="15" Click="Back2_Click">Zurück</Button>
        
    </Grid>
</UserControl>
