<UserControl x:Class="SchwimmbadShop1.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchwimmbadShop1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White" x:Name="Menü">

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        
        
        <Button Name="register" Margin="75" Grid.Column="0" Grid.Row="0" Click="register_Click">Registrieren</Button>
        <Button Name="login"  Margin="75" Grid.Column="1" Click="login_Click">Einloggen</Button>
        <Button Name="shop" Margin="75" Grid.Column="0" Grid.Row="1" Click="shop_Click">Shop</Button>
        <Button Name="logout" Margin="75" Grid.Column="1" Grid.Row="1">Ausloggen</Button>


    </Grid>
</UserControl>
